@using Restoran.Models
@model OrderViewModel

@{
    ViewData["Title"] = "Create Cart";
}

<h2>Your Cart</h2>

@if (Model.OrderItems == null || !Model.OrderItems.Any())
{
    <div class="alert alert-info">Your cart is empty. <a asp-action="Create">Go back to menu</a></div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>Rs @item.Price</td>
                    <td>@item.Quantity</td>
                    <td>Rs @(item.Price* item.Quantity)</td>
                    <td>
                        <form asp-action="RemoveItem" method="post">
                            <input type="hidden" name="prodId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3" class="text-end"><strong>Total Amount:</strong></td>
                <td colspan="2"><strong>Rs @Model.TotalAmount</strong></td>
            </tr>
        </tbody>
    </table>

    <form asp-action="PlaceOrder" method="post">
        <button type="submit" class="btn btn-primary">Place Order</button>
        <a asp-action="Create" class="btn btn-secondary">Continue Shopping</a>
    </form>
}
