@model OrderViewModel
@using Restoran.Helpers
@using Restoran.Models

<h2>Create Order</h2>

<div class="row">
    <div class="col-md-8">
        <h4>Products</h4>
        <div class="row">
            @foreach (var p in Model.Products)
            {
                <div class="col-md-4">
                    <div class="card mb-3">
                        <img src="~/images/@p.ImageUrl" class="card-img-top" style="height:150px; object-fit:cover;" />
                        <div class="card-body">
                            <h5>@p.Name</h5>
                            <p>Rs @p.Price</p>

                            <form asp-action="AddItem" method="post">
                                <input type="hidden" name="prodId" value="@p.ProductId" />

                                <input type="number" name="prodQty" value="1" min="1" class="form-control mb-2" />

                                <button type="submit" class="btn btn-primary btn-sm">Add To Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>


    <div class="col-md-4">
        <h4>Cart</h4>

        @if (Model.OrderItems != null && Model.OrderItems.Any())
        {
            <ul class="list-group">
                @foreach (var i in Model.OrderItems)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @i.ProductName (x @i.Quantity)
                        <span>Rs @i.Price</span>
                    </li>
                }
            </ul>


            <h5 class="mt-3">Total: Rs @Model.TotalAmount</h5>

            <form asp-controller="Order" asp-action="Cart" method="get">
                <button class="btn btn-success mt-2">View Cart</button>
            </form>

        }
        else
        {
            <p>No items in cart</p>
        }
    </div>
</div>
